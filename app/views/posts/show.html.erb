<div class="row justify-content-space-between">
  <div class="col">
    <%= link_to(posts_path, class: "fs-1 text-dark text-decoration-none") do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <% if current_user.posts.find_by(id: params[:id]) != nil %>
      <div class="col-sm-3 d-flex justify-content-space-between align-middle">
        <div class="col align-middle text-end">
          <%= link_to(edit_post_path(@post), class: "btn btn-outline-primary fs-5", style: "width: 50px; height:50px") do %>
            <i class="bi bi-pencil align-middle"></i>
          <% end %>
        </div>
        <div class="col align-middle text-end">
          <%= button_to(@post, method: :delete, class: "btn btn-outline-danger", style: "width: 50px; height:50px") do %>
            <i class="bi bi-trash3"></i>
          <% end %>
        </div>
        <div class="col align-middle text-end">
          <%= link_to(new_post_path, class: "btn btn-outline-success fs-5", style: "width: 50px; height:50px") do %>
            <i class="bi bi-pencil-square align-middle"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="card overflow-auto shadow-sm p-3">
  <div class="card-body">
    <h1 class="card-title">
      <%= @post.title %>
    </h1>
    <div class="row my-3">
      <div class="col-sm-6">
        <%= image_tag(@post.user.avatar.variant(resize_to_fill: [30, 30]), class: "rounded-circle") %>
        <small><%= @post.user.email %></small>
      </div>
      <div class="col-sm-6 text-end">
        <small>posted <%= time_ago_in_words(@post.created_at) %> ago</small>
      </div>
    </div>
    <p class="card-text">
      <%= @post.content %>
    </p>
    
  </div>
</div>
