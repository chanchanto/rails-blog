<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row py-2">
    <%= form.label :title,  class: "form-label fw-bold" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group row py-2">
    <%= form.label :content,  class: "form-label fw-bold" %>
    <%= form.rich_text_area :content, class:"form-control" %>
  </div>

  <div class="form-group row py-2">
    <%= form.label :tag_list, "Tags", class: "form-label fw-bold" %>
    <%= form.text_field :tag_list,
      class:"form-control",
      value: @post.send(:tag_list).to_s,
      placeholder: "tag1, tag2" %>
  </div>

  <div class="actions row  pt-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
